{
	"env": {
		"browser": true,
		"node": true
	},
	"categories": {
		"correctness": "error",
		"nursery": "warn",
		"pedantic": "warn",
		"suspicious": "warn"
	},
	"rules": {
		"max-lines-per-function": "off",
		"max-lines": "off",
		"max-depth": "off",
		"eqeqeq": ["error", "always", { "null": "ignore" }]
	},
	"overrides": [
		{
			"files": ["next-env.d.ts"],
			"rules": {
				"triple-slash-reference": "off"
			}
		}
	]
}
